- content_for :css do
  = stylesheet_link_tag '/fancybox/jquery.fancybox-1.2.6.css'
= javascript_include_jquery
= javascript_include_tag '/fancybox/jquery.fancybox-1.2.6.pack.js'
- items = @items.clone
%table{ :cellspacing => "0", :border => "0", :align => "center", :width => "55%", :cellpadding => "0" }
  - if @items.size.zero?
    %tr
      %td no images
  - else
    =render :partial => '/paginate_part', :locals => {:items => items, :cols => 3}
    - for i in 1..3
      - break if @items.size == 0
      %tr
        - for k in 1..3
          - i = @items.shift
          %td{ :width => "150", :align => "center" }
            %div
              - if i
                = link_to(image_tag(i.photo.url(:thumb), :title => i.title, :alt => i.title), i.photo.url, :class => :box, :rel => :box)
                %br
                %p{ :align => "center" }= i.title
    =render :partial => '/paginate_part', :locals => {:items => items, :cols => 3}
:javascript
  $(function(){
    $('.box').fancybox({
      'zoomOpacity'			: true,
      'overlayShow'			: false,
      'zoomSpeedIn'			: 300,
      'zoomSpeedOut'			: 300
    });
  });

