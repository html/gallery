<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= stylesheet_link_tag 'blog', 'style' %>
    <%= yield :css %>
    <%= yield(:head) %>
<script type="text/javascript">
function cssmenuhover()
{
        if(!document.getElementById("cssmenu"))
                return;
        var lis = document.getElementById("cssmenu").getElementsByTagName("LI");
        for (var i=0;i<lis.length;i++)
        {
                lis[i].onmouseover=function(){this.className+=" iehover";}
                lis[i].onmouseout=function() {this.className=this.className.replace(new RegExp(" iehover\\b"), "");}
        }
}
if (window.attachEvent)
        window.attachEvent("onload", cssmenuhover);

</script>
  </head>
<body>
<div align="center">
  <a name="top"></a>
<img src="/images/ae1.jpg" /><p>&nbsp;</p>
  <ul id="cssmenu">
        <li><a href="index.html">INFO</a>
        </li>
        <li><a href="#">CONTACTS</a>
        </li>
        <% @menu.each do |item| %>
          <li><a href="javascript:;"><%=h item[:title]%></a>
              <ul>
                <% item[:children].each do |item| %>
                  <li><a href="<%=url_for(cat_user_path(item)) %>"><%=h item.title %></a></li>
                <% end %>
              </ul>
          </li>
        <% end %>
</ul>
</div>
<p>&nbsp;</p>
<%= yield %>
</body>
</html>
